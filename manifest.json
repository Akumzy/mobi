{
  "name": "Mobi",
  "short_name": "Mobi",
  "version": "6.0",
  "description": "A simple tool for testing a web page responsiveness.",
  "manifest_version": 2,
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Open a mobile view"
  },
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}
